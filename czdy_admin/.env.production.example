# 生产环境配置示例
# 复制此文件为 .env 并修改相应的配置

[app]
# 应用调试模式（生产环境必须关闭）
app_debug = false

# 应用Trace
app_trace = false

[database]
# 数据库配置
hostname = 127.0.0.1
database = xinghuojihua
username = your_production_username
password = your_production_password
hostport = 3306
prefix = fa_

[cache]
# 缓存配置
cache_type = Redis
redis_host = 127.0.0.1
redis_port = 6379
redis_password =

[session]
# Session配置
session_type = redis
session_prefix = think

[cors]
# 允许跨域的域名（生产环境需要配置实际域名）
cors_request_domain = your-domain.com,www.your-domain.com

[upload]
# 上传配置
uploadmode = local
maxuploadsize = 10485760
